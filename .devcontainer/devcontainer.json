{
    "name": "products dev container",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/docker-practice-workspace",
    "extensions": [
        "ecodes.vscode-phpmd",
        "bmewburn.vscode-intelephense-client",
        "shevaua.phpcs"
    ],
    "settings": {
        "editor.tabSize": 4,
        "phpcs.composerJsonPath": "./src/composer.json",
        "phpcs.executablePath": "./src/vendor/bin/phpcs",
        "phpmd.command": "./src/vendor/bin/phpmd",
        "phpmd.rules": "./src/phpmd.xml"
    },
    "postCreateCommand": "php --version"
}